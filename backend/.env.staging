# Staging Environment Configuration

# Application
APP_NAME=ChefGPT-Staging
APP_VERSION=1.0.0
ENVIRONMENT=staging
DEBUG=False
SECRET_KEY=CHANGE_THIS_TO_STAGING_SECRET_KEY

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=False
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Database
DATABASE_URL=postgresql://postgres:STAGING_DB_PASSWORD@db:5432/chefgpt_staging
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5
POSTGRES_USER=postgres
POSTGRES_PASSWORD=STAGING_DB_PASSWORD
POSTGRES_DB=chefgpt_staging

# Supabase
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_KEY=your-staging-supabase-anon-key
SUPABASE_SERVICE_KEY=your-staging-supabase-service-key

# JWT
JWT_SECRET_KEY=STAGING_JWT_SECRET_KEY_MINIMUM_32_CHARACTERS
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# OpenAI (use test/dev keys for staging)
OPENAI_API_KEY=sk-your-staging-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-staging-anthropic-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# Redis
REDIS_URL=redis://:STAGING_REDIS_PASSWORD@redis:6379/0
REDIS_PASSWORD=STAGING_REDIS_PASSWORD

# File Storage
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp
UPLOAD_DIR=/app/uploads

# CORS
CORS_ORIGINS=https://staging.chefgpt.com,https://staging-app.chefgpt.com

# Rate Limiting (more relaxed for testing)
RATE_LIMIT_PER_MINUTE=120

# Vision API
VISION_MODEL=gpt-4-vision-preview
VISION_MAX_TOKENS=300

# RAG Settings
EMBEDDING_DIMENSION=3072
VECTOR_SEARCH_LIMIT=10
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Celery
CELERY_BROKER_URL=redis://:STAGING_REDIS_PASSWORD@redis:6379/1
CELERY_RESULT_BACKEND=redis://:STAGING_REDIS_PASSWORD@redis:6379/2

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=1.0
