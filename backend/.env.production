# Production Environment Configuration
# IMPORTANT: Replace all placeholder values with actual production values

# Application
APP_NAME=ChefGPT
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=CHANGE_THIS_TO_A_LONG_RANDOM_SECRET_KEY_IN_PRODUCTION

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=False
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql://postgres:YOUR_STRONG_DB_PASSWORD@db:5432/chefgpt
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_STRONG_DB_PASSWORD
POSTGRES_DB=chefgpt

# Supabase (if using)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-production-supabase-anon-key
SUPABASE_SERVICE_KEY=your-production-supabase-service-key

# JWT
JWT_SECRET_KEY=YOUR_STRONG_JWT_SECRET_KEY_MINIMUM_32_CHARACTERS
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI
OPENAI_API_KEY=sk-your-production-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Anthropic (Optional)
ANTHROPIC_API_KEY=sk-ant-your-production-anthropic-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# Redis
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379/0
REDIS_PASSWORD=YOUR_STRONG_REDIS_PASSWORD

# File Storage
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp
UPLOAD_DIR=/app/uploads

# CORS (add your production frontend URLs)
CORS_ORIGINS=https://chefgpt.com,https://www.chefgpt.com,https://app.chefgpt.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Vision API
VISION_MODEL=gpt-4-vision-preview
VISION_MAX_TOKENS=300

# RAG Settings
EMBEDDING_DIMENSION=3072
VECTOR_SEARCH_LIMIT=10
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Celery
CELERY_BROKER_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379/1
CELERY_RESULT_BACKEND=redis://:YOUR_REDIS_PASSWORD@redis:6379/2

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@chefgpt.com
